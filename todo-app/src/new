<!-- import React, { useState } from "react";

function TodoList() {
  const [todoList, setTodoList] = useState([]);
  const [inProgressList, setInProgressList] = useState([]);
  const [doneList, setDoneList] = useState([]);
  const [inputValue, setInputValue] = useState("");

  const handleInputChange = (event) => {
    setInputValue(event.target.value);
  };

  const handleAddTodo = (category) => {
    if (inputValue.trim() !== "") {
      switch (category) {
        case "todo":
          setTodoList([...todoList, inputValue]);
          break;
        case "inProgress":
          setInProgressList([...inProgressList, inputValue]);
          break;
        case "done":
          setDoneList([...doneList, inputValue]);
          break;
        default:
          break;
      }
      setInputValue("");
    }
  };

  const handleDeleteTodo = (category, index) => {
    switch (category) {
      case "todo":
        const newTodoList = [...todoList];
        newTodoList.splice(index, 1);
        setTodoList(newTodoList);
        break;
      case "inProgress":
        const newInProgressList = [...inProgressList];
        newInProgressList.splice(index, 1);
        setInProgressList(newInProgressList);
        break;
      case "done":
        const newDoneList = [...doneList];
        newDoneList.splice(index, 1);
        setDoneList(newDoneList);
        break;
      default:
        break;
    }
  };

  return (
    <div>
      <h2>Todo List</h2>
      <div>
        <input
          type="text"
          value={inputValue}
          onChange={handleInputChange}
          placeholder="Enter a new todo"
        />
        <button onClick={() => handleAddTodo("todo")}>Add Todo</button>
        <button onClick={() => handleAddTodo("inProgress")}>
          Add In Progress
        </button>
        <button onClick={() => handleAddTodo("done")}>Add Done</button>
      </div>
      <div>
        <h3>To Do</h3>
        <ul>
          {todoList.map((todo, index) => (
            <li key={index}>
              {todo}
              <button onClick={() => handleDeleteTodo("todo", index)}>
                Delete
              </button>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3>In Progress</h3>
        <ul>
          {inProgressList.map((todo, index) => (
            <li key={index}>
              {todo}
              <button onClick={() => handleDeleteTodo("inProgress", index)}>
                Delete
              </button>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3>Done</h3>
        <ul>
          {doneList.map((todo, index) => (
            <li key={index}>
              {todo}
              <button onClick={() => handleDeleteTodo("done", index)}>
                Delete
              </button>
            </li>
          ))}
        </ul>
      </div>
    </div>
  );
}
